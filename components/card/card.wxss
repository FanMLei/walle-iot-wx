/* components/card.wxss */
.card-container{
 border:1rpx solid #dddee1;
 width: 96%;
 height: 150rpx;
 display: inline-block;
 border-radius: 16rpx;
 margin: 0 2%;
 position: relative;
}
.c0{
  background-color:#0078d7;
}
.c1{
  background-color:#ff9900;
}
.c2{
  background-color:#19be6b;
}
.c3{
  background-color:#ed3f14;
}
.icon-container{
  width: 25%;
  height: 100%;
  display: inline-block;
  margin-left: 15rpx;
}
.left-img{
  width: 100%;
  height: 100%;
}
.desc{
  width:70%;
  float: right;
  position: relative;
}
.number{
  color: #fff;
  font-size: 64rpx;
  float: right;
  margin: 0 20rpx;
}
.title{
  width: 100%;
  font-size: 28rpx;
  text-align: right;
  color: #fff;
  float: right;
  margin: 20rpx 20rpx 0;
}
