/* pages/chart/chart.wxss */

page {
  height: 100%;
  background-color: #f7f7f7;
}

.chart-container {
  padding: 1% 0;
  background-color: #f7f7f7;
  height: 100%;
}

.device-container {
  background-color: #fff;
  margin: 1%;
  padding-top: 1%;
  border-radius: 20rpx;
}

.device-title {
  font-size: 20px;
  line-height: 32px;
  margin: 2%;
  
}
.device-status{
  display: inline-block;
  margin-left: 5px;
}
.stream-title {
  font-size: 16px;
  line-height: 30px;
}

.img {
  width: 32rpx;
  height: 32rpx;
}

.canvas {
  width: 100%;
  height: 300px;
}
