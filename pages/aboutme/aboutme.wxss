/* pages/aboutme/aboutme.wxss */

page {
  height: 96%;
  background-color: #f7f7f7;
}

.navigator-hover {
  background-color: #f5f6f7;
  border-radius: 20rpx;
}

.pannel {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 2%;
  margin: 2%;
  position: relative;
}

.userinfo {
  padding-left: 5%;
  display: inline-block;
  width: 65%;
  height: 100%;
  align-content: center;
}

.user-name {
  font-size: 45rpx;
}

.user-id {
  font-size: 30rpx;
  color: #909090;
  display: inline-block;
}

.user-avatar {
  display: inline-block;
  width: 128rpx;
  height: 128rpx;
  margin: 10px 0 0 20px;
  border-radius: 50%;
  overflow: hidden;
  right: 20px;
}

.status {
  font-size: 12px;
  padding: 1px 6px;
  margin-left: 16px;
  color: #fff;
  border-radius: 10px;
}

.com-sImg {
  position: absolute;
  margin-left: 10px;
  width: 20px;
  height: 20px;
  top: 46%;
}

.col-class {
  display: inline-flex;
}

.col-item {
  padding: 20px;
  position: relative;
  text-align: center;
}

.item-image {
  width: 80%;
  height: 80%;
  margin-left: auto;
  margin-right: auto;
  display: block;
}

.item-title {
  display: block;
  width: 100%;
  font-size: 14px;
  text-align: center;
}

.backend {
  position: absolute;
  bottom: 0px;
  width: 96%;
  padding: 0 2%;
}

.btn {
  border: none;
  font-size: 14px;
  line-height: 40px;
  text-align: left;
  height: 40px;
  background-color: #FFF;
}
.btn-hover {
  border: none;
}
.btn::after {
  border: none;
}
